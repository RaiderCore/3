<Window x:Class="MathCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Calculator" Height="350" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
          
            <TextBlock Text="Введите номер варианта (1-30):" Margin="0,0,0,10"/>
            <TextBox x:Name="VariantTextBox" Width="200" Margin="0,0,0,10"/>
            
            
            <Button Content="Вычислить" Click="CalculateButton_Click" Width="100" Margin="0,0,0,10"/>
            
            
            <TextBlock x:Name="ResultTextBlock" Text="Результат будет здесь" TextWrapping="Wrap" Width="300"/>
        </StackPanel>
    </Grid>
</Window>